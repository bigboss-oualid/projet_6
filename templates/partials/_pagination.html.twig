<div class="d-flex justify-content-center">
    <nav aria-label="...">
        <ul class="pagination">
            <li class="page-item {% if page == 1 %}disabled{% endif %}">
                <a class="page-link" href="{{ path(route, {'page': page-1}|merge(parameters)) }}" tabindex="-1">Previous</a>
            </li>
            {% for i in 1..pages %}
                <li class="page-item {% if page == i %}active{% endif %}">
                    <a class="page-link" href="{{ path(route, {'page': i}|merge(parameters)) }}">{{ i }}</a>
                </li>
            {%  endfor %}
            <li class="page-item {% if page == pages %}disabled{% endif %}">
                <a class="page-link" href="{{ path(route, {'page': page+1}|merge(parameters)) }}">Next</a>
            </li>
        </ul>
    </nav>
</div>