<div class="col-lg-4 col-md-6 mb-2" id="video-{{ form.vars.name}}">
    <div class="border p-2 w-100">
        <div class="text-center p-2">
            <span id="video-value-{{ form.vars.name }}">
            {% set video = form.vars.value %}
            {% if video.embedCode is defined  %}
                {{ video.embedCode | raw}}
            {% else %}
                <img id="video-holder-{{ form.vars.name }}" class="rounded" width="120" height="120" src="{{ asset('images/defaults/video-placeholder.png') }}"/>
            {%  endif %}
            </span>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="modal-{{ form.vars.name }}" tabindex="-1" role="dialog" aria-labelledby="modal-{{ form.vars.name }}-Label" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="modal-{{ form.vars.name }}-Label">
                            Intégrer une vidéo
                            <i role="button" class="tooltip-info text-success" tabindex="0" data-trigger="click" data-placement="top" data-html="true" data-toggle="popover" title="" data-content="<p class='text-center my-2'>Visitez les liens ci-dessous pour savoir comment intégrer une vidéo :</p><ul><li><a href='https://support.google.com/youtube/answer/171780?hl=fr' target='_blank'>YouTube</a></li><li><a href='http://dailymotion.canalblog.com/archives/2011/02/10/20351553.html' target='_blank'>DailyMotion</a></li><li><a href='https://help.vimeo.com/hc/fr/articles/229326167-Fonctionnalit%C3%A9s-de-partage' target='_blank'>Viméo</a></li></ul>" data-original-title="Comment intégrer des vidéos ?"><small>( Comment <i class="fa fa-question-circle text-success "></i> )</small></i>
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{ form_row(form.embedCode)}}
                    </div>
                    <div class="modal-footer">
                        <a id="modal-remove-{{ form.vars.name }}" class="btn btn-danger btn-remove text-white" data-dismiss="modal">Supprimer</a>
                        <a id="modal-btn-{{ form.vars.name }}" class="btn btn-success text-white">Ajouter</a>
                    </div>
                </div>
            </div>
        </div>
        <div id="video-btns"  class="row mb-2 pb-2 d-flex justify-content-center">
            <div class="mr-1">
                <a class="btn btn-success" data-toggle="modal" data-target="#modal-{{ form.vars.name }}">
                    {% if video.embedCode is defined  %}
                        <i class="fa fa-pencil"></i>
                    {% else %}
                        <i class="fa fa-plus-circle text-white"></i>
                    {% endif %}
                </a>
            </div>
            <div class="">
                <button type="button" class="btn btn-danger btn-remove" data-rel="#video-{{ form.vars.name }}"><i class="fa fa-trash"></i></button>
            </div>
        </div>
    </div>
</div>
