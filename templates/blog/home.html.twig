{% extends 'base.html.twig' %}

{% block title %}Accueil - {{ parent() }} {% endblock %}

{% block body %}
    <header class="masthead text-white">
        <div class="overlay"></div>
        <div class="container slider-top-text">
            <div class="row my-mt-head">
                <div class="col-md-12 text-center">
                    <h3 class="my-heading wow bounceInDown" data-wow-duration="1.5s">BIENVENUE À <span class="bg-main">S</span>NOW<span class="bg-main">T</span>RICKS</h3>
                    <p class="myp-slider text-center slider-text mt-5 wow slideInRight" data-wow-duration="2.5s">Où les snowboarders s'unissent et s'améliorent ensemble</p>
                    <p class="mb-0 text-center slider-text d-none d-lg-block wow slideInLeft" data-wow-duration="3s">PARTAGEZ VOS SOUVENIRS | CONNECTEZ-VOUS AVEC D'AUTRES | SE FAIRE DE NOUVEAUX AMIS</p>
                    <h4 class="wow bounceIn mb-3" data-wow-duration="4s" data-wow-delay="3s" id="js-home"><span class="bg-main">J</span>immy<span class="bg-main">S</span>weat</h4>
                    <a data-wow-duration="2s" class="btn btn-join btn-outline-warning  wow bounceInUp" href="{{ path('security.register') }}">REJOIGNEZ LA COMMUNAUTÉ</a>
                </div>
            </div>
        </div>
        <div id="gobottom-container" class="col-md-12 text-center fixed-bottom">
            <div class="scroll-down">
                <a class="btn btn-default btn-scroll floating-arrow" href="#gobottom" id="bottom"><i class="fa fa-angle-down"></i></a>
            </div>
        </div>
    </header>

    <section class="trick-section m-5" id="gobottom">
        <div class="row">
            <div class="col-md-8 mx-auto wow fadeInUp" data-wow-duration="1.6s">
                <h3 id="home-section" class="home-p text-center mb-5 font-weight-bold">Figures <span class="bg-main">S</span>now<span class="bg-main">T</span>ricks</h3>
                <p class="h2 text-dark text-center">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s.</p>
            </div>
        </div>
        {% set pagesNumber = pagination.pages %}
        <div class="row load-content d-flex justify-content-center" data-pages = {{ pagesNumber }} id="tricks"></div>
        {% if pagesNumber > 1 %}
            {{ pagination.display() }}
        {#{% else %}#}
        {% endif %}
    </section>

{% endblock %}
{% block javascripts%}
    {#pagination Tricks#}
    {{ encore_entry_script_tags('loadMore') }}
    {{ encore_entry_script_tags('home') }}
{% endblock %}
