{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublie!{% endblock %}

{% block body %}
    <div class="container justify-content-center vertical-center m-bottom">
        <div class="row">
            <div class="col-sm-12" id="create-account-title">
                <h3 class="titre-content mb-5 text-center"><span class="bg-main">M</span>OT DE PASSE OUBLIÉ</h3>
                {% include'partials/_flashes.html.twig' %}
            </div>
            <div class="col-sm-12">
                <div class="user_card w-100">
                    <div class="d-flex justify-content-center">
                        <div class="brand_logo_container">
                            <img src="{{ asset('images/defaults/logo.png') }}" class="brand_logo" alt="Logo">
                        </div>
                    </div>
                    <div class="d-flex justify-content-center form_container px-5">
                        <div class="row mx-md-5">
                            <div class="col-sm-12">
                                <form method="post">
                                    <div class="input-group mb-3">
                                        <div class="input-group-append">
                                            <span class="input-group-text"><i class="fas fa-at"></i></span>
                                        </div>
                                        <input type="email" name="_email" id="email" class="form-control input_user" placeholder="Entrez votre email adresse" required autofocus>
                                    </div>
                                    <div class="d-flex justify-content-center mt-4">
                                        <button type="submit" class="btn btn-warning btn-nav btn-block">Réinitialiser mot de passe</button>
                                    </div>
                                </form>
                            </div>
                            <div class="col-sm-12">
                                <div class="mt-4">
                                    <div class="d-flex justify-content-center links text-white">
                                        <span class="d-none d-sm-block">Vous n'avez pas de compte? </span>
                                        <a href="{{ path('security.register') }}" class="ml-2 normal-link">S'inscrire</a>
                                    </div>
                                    <div class="d-flex justify-content-center links">
                                        <a class="float-right normal-link"  href="{{ path('security.login') }}">Se connecter?</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}