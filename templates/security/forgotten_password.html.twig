{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublie !{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-6 mt-5">
                <div class="bg-light py-3 px-3">
                    <h1 class="text-center mb-5 mt-4">Mot de passe oublie !</h1>
                    <form method="post">
                        <div class="form-group">
                            <label for="email">Adresse email</label>
                            <input type="email" name="_email" id="email" class="form-control" placeholder="Entrez votre email adresse" required autofocus>
                        </div>
                        <div class="form-group my-4">
                            <button class="btn btn-lg btn-success btn-block" type="submit">Envoyez votre email</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}