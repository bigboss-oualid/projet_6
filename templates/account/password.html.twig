{% extends 'base.html.twig' %}

{% block title %}Modification du mot de passe {% endblock %}

{% block body%}
    <div class="container">
        <div class="row justify-content-md-center">
            <div class="col-md-7 mt-5">
                <div class="bg-light py-3 px-3">
                    <h1 class="text-center mb-5 mt-4">Modification du mot de passe !</h1>

                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="form-group my-5">
                        <button type="submit" class="btn btn-success btn-block">Modifier le mot de passe</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>
{% endblock %}